{%include 'Plentymarket::common.header'%}
{%include 'Plentymarket::common.breadcrumb'%}

<!--=============================================
=            My Account page content         =
=============================================-->

<div class="page-section mb-80">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="row">
					<!-- My Account Tab Menu Start -->
					<div class="col-lg-3 col-12">
						<div class="myaccount-tab-menu nav" role="tablist">

							<a href="#orders" class="active" data-toggle="tab"><i class="fa fa-cart-arrow-down"></i>{{trans('Plentymarket::WebAccountIndex.orders')}}
							</a>

							<a href="#address-edit" data-toggle="tab"><i class="fa fa-map-marker"></i>{{trans('Plentymarket::WebAccountIndex.address')}}
							</a>

							<a href=""><i class="fa fa-sign-out"></i>{{trans('Plentymarket::WebAccountIndex.logout')}}
							</a>
						</div>
					</div>
					<!-- My Account Tab Menu End -->

					<!-- My Account Tab Content Start -->
					<div class="col-lg-9 col-12">
						<div class="tab-content" id="myaccountContent">

							<!-- Single Tab Content Start -->
							<div class="tab-pane fade  show active" id="orders" role="tabpanel">
								<div class="myaccount-content">
									<h3>{{trans('Plentymarket::WebAccountIndex.orders')}}</h3>

									<div class="myaccount-table table-responsive text-center">
										<table class="table table-bordered">
											<thead class="thead-light">
											<tr>
												<th>No</th>
												<th>Name</th>
												<th>Date</th>
												<th>Status</th>
												<th>Total</th>
												<th>Action</th>
											</tr>
											</thead>

											<tbody>
											{%for order in orders.entries%}
												<tr>
													<td>{{order.id}}</td>
													<td>{{order.items_name}}</td>
													<td>{{order.createdAt}}</td>
													<td>{{order.statusName}}</td>
													<td>{{order.total_amount}}</td>
													<td>
														<a href="/account/orderdetail/{{order.id}}" class="btn">{{trans('Plentymarket::WebAccountIndex.view')}}</a>
													</td>
												</tr>
											{%endfor%}
											</tbody>
										</table>
									</div>
								</div>
							</div>
							<!-- Single Tab Content End -->

							<!-- Single Tab Content Start -->
							<div class="tab-pane fade" id="address-edit" role="tabpanel">
								<div class="myaccount-content">
									<h3>{{trans('Plentymarket::WebAccountIndex.address')}}</h3>

									{%for address in addresses%}
										<address style="display: inline-block;">
											<p><strong>{{address.name2}} {{address.name3}}</strong></p>
											<p>{{address.address1}}</p>
											<p>{{trans('Plentymarket::WebAccountIndex.mobile')}}: {{address.phone}}</p>

											{#										<a href="#" class="btn d-inline-block edit-address-btn">#}
											{#											<i class="fa fa-edit"></i>Edit Address#}
											{#										</a>#}
										</address>
									{%endfor%}
								</div>
							</div>
							<!-- Single Tab Content End -->

						</div>
					</div>
					<!-- My Account Tab Content End -->
				</div>

			</div>
		</div>
	</div>
</div>

<!--=====  End of My Account page content  ======-->
{%include 'Plentymarket::common.footer'%}
