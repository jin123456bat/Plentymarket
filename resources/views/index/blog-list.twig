<style>
	A.applink:hover
	{
		border: 2px dotted #DCE6F4;
		padding: 2px;
		background-color: #ffff00;
		color: green;
		text-decoration: none;
	}

	A.applink
	{
		border: 2px dotted #DCE6F4;
		padding: 2px;
		color: #2F5BFF;
		background: transparent;
		text-decoration: none;
	}

	A.info
	{
		color: #2F5BFF;
		background: transparent;
		text-decoration: none;
	}

	A.info:hover
	{
		color: green;
		background: transparent;
		text-decoration: underline;
	}
</style>
<!--=============================================
	=            Blog Page Container         =
	=============================================-->

<div class="blog-page-container mb-80">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<!--=======  blog post container  =======-->

				<div class="blog-post-container mb-15">

					<div class="row">

						{%for item in list.entries%}
							<div class="col-lg-4 col-md-6">
								<!--=======  single blog post  =======-->

								<div class="single-blog-post gallery-type-post mb-35">
									<div class="row">
										<div class="col-lg-12">
											{%if item.data.images|length > 1%}
												<div class="single-blog-post-media mb-20">
													<div class="blog-image-gallery">
														{%for image in item.data.images%}
															<div class="single-image">
																<a href="/index/blog/{{item.id}}"><img src="{{image}}" class="img-fluid blog-preview-image" alt=""></a>
															</div>
														{%endfor%}
													</div>
												</div>
											{%else%}
												<div class="single-blog-post-media mb-20">
													<div class="image">
														<a href="/index/blog/{{item.id}}"><img src="{{item.data.images.0}}" class="img-fluid blog-preview-image" alt=""></a>
													</div>
												</div>
											{%endif%}

										</div>
										<div class="col-lg-12">
											<div class="single-blog-post-content">
												<h3 class="post-title">
													<a href="/index/blog/{{item.id}}">{{item.data.post.title}}</a>
												</h3>
												<div class="post-meta">
													<p><span><i class="fa fa-user-circle"></i> </span>
														<a>{{item.data.user.realName}}</a>
														<span class="separator">/</span>
														<span><i class="fa fa-calendar"></i> <a>{{item.createdAt}}</a></span>
													</p>
												</div>

												<p class="post-excerpt">
													{{item.data.post.shortDescription}}
												</p>
												<a href="/index/blog/{{item.id}}" class="blog-readmore-btn">{{trans('Plentymarket::WebIndexBlogList.continue')}}
													<i class="fa fa-long-arrow-right"></i></a>
											</div>
										</div>
									</div>
								</div>
								<!--=======  End of single blog post  =======-->
							</div>
						{%endfor%}

					</div>
				</div>

				<!--=======  End of blog post container  =======-->
				{%if list.totalsCount > 9%}
					<!--=======  Pagination container  =======-->
					<div class="pagination-container pb-20 mb-md-80 mb-sm-80">
						<div class="container">
							<div class="row">
								<div class="col-lg-12">
									<!--=======  pagination-content  =======-->

									<div class="pagination-content text-center">
										<ul>
											<li>
												<a href="?page={{page-1}}"><i class="fa fa-angle-left"></i>{{trans('Plentymarket::WebIndexProductListCategory.previous')}}
												</a></li>
											{%set max = (list.totalsCount/9)|ceil%}
											{%for i in 1..max%}
												<li>
													<a {%if page==i%}class="active"{%endif%} href="?page={{i}}">{{i}}</a>
												</li>
											{%endfor%}
											<li>
												<a href="?page={{page+1}}">{{trans('Plentymarket::WebIndexProductListCategory.next')}}
													<i class="fa fa-angle-right"></i> </a></li>
										</ul>
									</div>

									<!--=======  End of pagination-content  =======-->
								</div>
							</div>
						</div>
					</div>
					<!--=======  End of Pagination container  =======-->
				{%endif%}

			</div>
		</div>
	</div>
</div>
<!--=====  End of Blog Page Container  ======-->
{%include 'Plentymarket::common.footer'%}
