<!--=============================================
=            single product page content         =
=============================================-->

<div class="single-product-page-content mb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-md-50 mb-sm-50">
                <!-- single product tabstyle one image gallery -->
                <div class="product-image-slider pts-product-image-slider pts3-product-image-slider">
                    <!--product large image start -->
                    <div style="height: 647px; width: 540px;" class="tab-content product-large-image-list pts-product-large-image-list pts3-product-large-image-list" id="myTabContent">
                        {%for image in item.images%}
                            <div class="tab-pane fade {%if loop.first%}show active{%endif%}" id="single-slide-{{loop.index}}" role="tabpanel" aria-labelledby="single-slide-tab-{{loop.index}}">
                                <!--Single Product Image Start-->
                                <div class="single-product-img img-full">
                                    <img src="{{image}}" class="img-fluid" alt="">
                                    <a href="{{image}}" class="big-image-popup"><i class="fa fa-search-plus"></i></a>
                                </div>
                                <!--Single Product Image End-->
                            </div>
                        {%endfor%}
                    </div>
                    <!--product large image End-->

                    <!--product small image slider Start-->
                    <div class="product-small-image-list pts-product-small-image-list pts3-product-small-image-list">
                        <div class="nav small-image-slider pts3-small-image-slider" role="tablist">
                            {%for image in item.images%}
                                <div class="single-small-image img-full">
                                    <a data-toggle="tab" id="single-slide-tab-{{loop.index}}" href="#single-slide-{{loop.index}}">
                                        <img src="{{image}}" class="img-fluid" alt="" style="width: 167px;height: 200px;">
                                    </a>
                                </div>
                            {%endfor%}
                        </div>
                    </div>
                    <!--product small image slider End-->
                </div>
                <!-- end of single product tabstyle one image gallery -->
            </div>
            <div class="col-lg-6">
                <!--=======  single product details  =======-->

                <div class="single-product-details-container">
                    <p class="product-title mb-15">{{item.name}}</p>
                    <p class="reference-text mb-15">Manufacturer: {{item.manufacturer}}</p>
                    <div class="rating d-inline-block mb-15">
                        <i class="lnr lnr-star active"></i>
                        <i class="lnr lnr-star active"></i>
                        <i class="lnr lnr-star active"></i>
                        <i class="lnr lnr-star active"></i>
                        <i class="lnr lnr-star active"></i>
                    </div>
                    <!--
                    <p class="review-links d-inline-block">
                        <a href="#"><i class="fa fa-comment-o"></i> Read reviews (1) </a>
                        <a href="#"><i class="fa fa-pencil"></i> Write a review</a>
                    </p>
                    -->
                    <p class="product-price mb-30">
                        <span class="main-price discounted">{{item.format_main_price}}</span>
                        <span class="discounted-price">{{item.format_discount_price}}</span>
                    </p>
                    <p class="product-description mb-15">
                        {{item.short_desc}}
                    </p>
                    <div class="cart-buttons mb-30">
                        <p class="mb-15">{{trans("Plentymarket::WebIndexProduct.quantity")}}</p>
                        <div class="pro-qty mr-10">
                            <input type="text" value="{{item.min_num}}" min="{{item.min_num}}" max="{{item.stock}}">
                        </div>
                        <a href="#" class="pataku-btn" data-variationid="{{item.variationId}}"><i class="fa fa-shopping-cart"></i> {{trans("Plentymarket::WebIndexProduct.add_to_cart")}}
                        </a>
                    </div>
                    <p class="wishlist-link mb-30">
                        {%if item.wishlist%}
                            <a href="#" id="remove_from_wishlist" data-id="{{item.variationId}}">
                                <i class="fa fa-trash-o"></i>{{trans("Plentymarket::WebIndexProduct.remove_from_wishlist")}}
                            </a>
                        {%else%}
                            <a href="#" id="add_to_wishlist" data-id="{{item.variationId}}">
                                <i class="fa fa-heart"></i>{{trans("Plentymarket::WebIndexProduct.add_to_wishlist")}}
                            </a>
                        {%endif%}
                    </p>

                    <div class="social-share-buttons mb-30">
                        <p>Share</p>
                        <ul>
                            <li><a class="twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a class="facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a class="google-plus" href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li><a class="pinterest" href="#"><i class="fa fa-pinterest"></i></a></li>
                        </ul>
                    </div>
                    <div class="policy-list">
                        <ul>
                            <li><img src="{{plugin_path("Plentymarket")}}/images/icons/shield.png" alt=""> Security
                                policy
                            </li>
                            <li><img src="{{plugin_path("Plentymarket")}}/images/icons/truck.png" alt=""> Delivery
                                policy
                            </li>
                            <li><img src="{{plugin_path("Plentymarket")}}/images/icons/compare.png" alt=""> Return
                                policy
                            </li>
                        </ul>
                    </div>
                </div>

                <!--=======  End of single product details  =======-->
            </div>
        </div>
    </div>
</div>

<!--=====  End of single product page content  ======-->


